{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "src/dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@models/*": ["src/models/*"],
    }
  },
  "include": ["src/helpers/custom.d.ts", "src/**/*.ts" ],
}
